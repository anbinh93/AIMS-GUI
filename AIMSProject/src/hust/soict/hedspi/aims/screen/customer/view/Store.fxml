<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;"
              AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"

              AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="20">
                    <Label text="AIMS Store" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Button fx:id="btnViewCart" text="View Cart" onAction="#btnViewCartPressed" />
                </HBox>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <GridPane fx:id="gridPane" hgap="10" vgap="10" style="-fx-padding: 10;" />
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
