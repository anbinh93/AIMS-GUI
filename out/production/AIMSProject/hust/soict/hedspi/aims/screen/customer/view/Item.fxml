<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-border-color: black;"
            fx:controller="hust.soict.hedspi.aims.screen.customer.controller.ItemController">
>
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.bottomAnchor="5.0">
            <Label fx:id="lblTitle" text="Title" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label fx:id="lblCost" text="Cost" style="-fx-font-size: 14px;" />
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnAddToCart" text="Add to Cart" onAction="#btnAddToCartClicked" />
                <Button fx:id="btnPlay" text="Play" onAction="#btnPlayClicked" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>